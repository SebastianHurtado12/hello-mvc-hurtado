extends layout

block content
  h1(style=" color: #EE1762") Hello MVC
  p Ingresá el ID del usuario que querés buscar.
  form.form-inline(action='/search' method='get')
    div.form-group.mr-sm-3
      input.form-control.text-danger(type='text' name='id' placeholder='ID')
    input.form-control.btn.btn-danger(type='submit' value='Buscar')
    hr
  if users
    table.table.table-striped
      thead.thead-dark
        th ID
        th Nombre
        th Email
        th Fecha de nacimiento
        th Edad
      tbody
        each user in users
          tr
            td= user.id
            td= user.name
            td= user.mail
            td= user.birthday.toLocaleDateString('es-AR')
            td= user.age
  else

    h3 No hay resultados
  hr
  center
    h4 Más info en
      a.text-danger(href='https://developer.mozilla.org/es/')   MDN
